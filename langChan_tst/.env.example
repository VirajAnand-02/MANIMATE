# Example .env file for Notes2Manim
# Copy this to .env and fill in your API keys

# API Keys (required)
GOOGLE_API_KEY=your_google_api_key_here
GENAI_API_KEY=your_genai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
SCRIPT_MODEL=gemini-2.5-flash
MANIM_MODEL=gemini-2.5-flash

# Token Limits (optional - auto-detected from model if not specified)
# MAX_OUTPUT_TOKENS_SCRIPT=65536
# MAX_OUTPUT_TOKENS_MANIM=65536

# TTS Configuration
TTS_PROVIDER=gemini
TTS_VOICE_NAME=Kore
TTS_MODEL=tts-1

# Thinking Configuration
THINKING_BUDGET=6000
USE_BATCH_MANIM=true

# Logging
LOG_LEVEL=INFO

# System Prompts (optional - override defaults)
# SYSTEM_PROMPT_SCRIPT="Your custom script prompt..."
# SYSTEM_PROMPT_MANIM="Your custom Manim prompt..."
